<catalog>
  <widget>
    <name>widget-transactions</name>
    <contextItemName>[BBHOST]</contextItemName>
    <extendedItemName>widget-launchpad-base</extendedItemName>
    <properties>
      <property label="Icon" name="icon" viewHint="text-input,admin,designModeOnly">
        <value type="string">transactions</value>
      </property>
      <property label="Title" name="title" viewHint="text-input,admin,designModeOnly">
        <value type="string">Transactions</value>
      </property>
      <property name="thumbnailUrl">
        <value type="string">$(contextRoot)/static/launchpad/banking/widgets/transactions/icon.png</value>
      </property>
      <property name="src">
        <value type="string">$(contextRoot)/static/launchpad/banking/widgets/transactions/index.html</value>
      </property>
      <property label="Messages Source" name="messageSrc" viewHint="text-input,admin,designModeOnly">
        <value type="string">$(contextRoot)/static/launchpad/modules/config/i18n/common.json</value>
      </property>
      <property label="Accounts Data Source" name="accountsDataSrc" viewHint="text-input,admin,designModeOnly">
        <value type="string">$(servicesPath)/services/rest/v1/debit-accounts</value>
      </property>
      <property label="Transactions Data Source" name="transactionsDataSrc" viewHint="text-input,admin,designModeOnly">
        <value type="string">$(servicesPath)/services/rest/v1/current-accounts/$(accountId)/transactions</value>
      </property>
      <property label="Category Data Source" name="categoryDataSrc" viewHint="text-input,admin,designModeOnly">
        <value type="string">$(servicesPath)/services/rest/v1/pfm/transaction-categories</value>
      </property>
      <property label="Transactions Data Source" name="transactionDetailsDataSrc" viewHint="text-input,admin,designModeOnly">
        <value type="string">$(servicesPath)/services/rest/v1/current-accounts/transaction/$(transactionId)/details</value>
      </property>
      <property label="Contacts Data Source" name="contactsDataSrc" viewHint="text-input,admin,designModeOnly">
        <value type="string">$(servicesPath)/services/rest/v1/party-data-management/counter-parties</value>
      </property>
      <property label="Accounts Chart Data Source" name="accountBalanceChartDataSrc" viewHint="text-input,admin,designModeOnly">
        <value type="string">$(servicesPath)/services/rest/v1/current-accounts/$(accountId)/balance</value>
      </property>
      <property label="Transactions Chart Data Source" name="transactionsChartDataSrc" viewHint="text-input,admin,designModeOnly">
        <value type="string">$(servicesPath)/services/rest/v1/current-accounts/$(accountId)/turnover</value>
      </property>
      <property label="Transactions Per Page" name="transactionsPageSize" viewHint="text-input,admin,designModeOnly">
        <value type="string">20</value>
      </property>
      <property label="Show Transaction Icons" name="showTransactionIcons" viewHint="checkbox,admin,designModeOnly">
        <value type="boolean">true</value>
      </property>
      <property label="Show Charts" name="showCharts" viewHint="checkbox,admin,designModeOnly">
        <value type="boolean">true</value>
      </property>
      <property label="Show Account Select" name="showAccountSelect" viewHint="checkbox,admin,designModeOnly">
        <value type="boolean">true</value>
      </property>
      <property label="Preference Service" name="preferenceService" viewHint="text-input,admin,designModeOnly">
        <value type="string">$(servicesPath)/services/rest/v1/party-data-management/preferences</value>
      </property>
      <property label="Category Spendings Data Source" name="categorySpendingDataSrc" viewHint="text-input,admin,designModeOnly">
        <value type="string">$(servicesPath)/services/rest/v1/current-accounts/spendings</value>
      </property>
      <property label="Transaction Categories Data Source" name="categoriesDataSrc" viewHint="text-input,admin,designModeOnly">
        <value type="string">$(servicesPath)/services/rest/v1/pfm/transaction-categories</value>
      </property>
      <property label="Hide Transaction Details in list" name="hideTransactionDetails" viewHint="checkbox,admin,designModeOnly">
        <value type="boolean">false</value>
      </property>
      <property label="Show Dates for All Transactions" name="showDatesAllTransactions" viewHint="checkbox,admin,designModeOnly">
        <value type="boolean">false</value>
      </property>
    </properties>
    <tags>
      <tag type="regular">transactions</tag>
      <tag type="section">banking</tag>
      <tag type="behavior">transactions</tag>
    </tags>
    <securityProfile>ADMIN</securityProfile>
  </widget>
</catalog>