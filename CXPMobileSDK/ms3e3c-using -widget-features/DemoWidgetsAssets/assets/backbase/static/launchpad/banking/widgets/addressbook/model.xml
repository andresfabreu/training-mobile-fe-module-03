<catalog>
  <widget>
    <name>widget-addressbook</name>
    <contextItemName>[BBHOST]</contextItemName>
    <extendedItemName>widget-launchpad-base</extendedItemName>
    <properties>
      <property label="Icon" name="icon" viewHint="text-input,admin,designModeOnly">
        <value type="string">addressbook</value>
      </property>
      <property label="Title" name="title" viewHint="text-input,admin,designModeOnly">
        <value type="string">Address Book</value>
      </property>
      <property name="thumbnailUrl">
        <value type="string">$(contextRoot)/static/launchpad/banking/widgets/addressbook/icon.png</value>
      </property>
      <property name="src">
        <value type="string">$(contextRoot)/static/launchpad/banking/widgets/addressbook/index.html</value>
      </property>
      <property label="Contact List Data Source" name="contactListDataSrc" viewHint="text-input,admin,designModeOnly">
        <value type="string">$(servicesPath)/services/rest/v1/party-data-management/counter-parties</value>
      </property>
      <property label="Contact Data Source" name="contactDataSrc" viewHint="text-input,admin,designModeOnly">
        <value type="string">$(servicesPath)/services/rest/v1/party-data-management/counter-party/$(contactId)</value>
      </property>
      <property label="Contact Details Data Source" name="contactDetailsDataSrc" viewHint="text-input,admin,designModeOnly">
        <value type="string">$(servicesPath)/services/rest/v1/party-data-management/counter-party/$(contactId)/details</value>
      </property>
      <property label="Payment Orders Data Source" name="paymentOrdersDataSrc" viewHint="text-input,admin,designModeOnly">
        <value type="string">$(servicesPath)/services/rest/v1/payment-orders/:accountIds/:paymentId/:action</value>
      </property>
    </properties>
    <tags>
      <tag type="regular">contacts</tag>
      <tag type="section">banking</tag>
      <tag type="behavior">address-book</tag>
    </tags>
    <securityProfile>ADMIN</securityProfile>
  </widget>
</catalog>