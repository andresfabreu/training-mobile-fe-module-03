<catalog>
  <widget>
    <name>widget-expense-planning</name>
    <contextItemName>[BBHOST]</contextItemName>
    <extendedItemName>widget-launchpad-base</extendedItemName>
    <properties>
      <property label="Icon" name="icon" viewHint="text-input,admin,designModeOnly">
        <value type="string">expense-planning</value>
      </property>
      <property label="Title" name="title" viewHint="text-input,admin,designModeOnly">
        <value type="string">Expense Planning</value>
      </property>
      <property name="thumbnailUrl">
        <value type="string">$(contextRoot)/static/launchpad/banking/widgets/expense-planning/icon.png</value>
      </property>
      <property name="src">
        <value type="string">$(contextRoot)/static/launchpad/banking/widgets/expense-planning/index.html</value>
      </property>
      <property label="Expenses Data Source" name="expensesDataSrc" viewHint="text-input,admin,designModeOnly">
        <value type="string">$(servicesPath)/services/rest/v1/payment-order-executions</value>
      </property>
      <property label="Expenses Details Source" name="expensesDetailsDataSrc" viewHint="text-input,admin,designModeOnly">
        <value type="string">$(servicesPath)/services/rest/v1/payment-orders</value>
      </property>
      <property label="Show Expense Icons" name="showExpenseIcons" viewHint="checkbox,admin,designModeOnly">
        <value type="boolean">true</value>
      </property>
    </properties>
    <tags>
      <tag type="regular">calendar</tag>
      <tag type="section">banking</tag>
    </tags>
    <securityProfile>ADMIN</securityProfile>
  </widget>
</catalog>