      </property>
      <property name="accountsEndpoint" label="Accounts List Endpoint" viewHint="text-input,admin,designModeOnly">
        <value type="string">services/rest/v1/debit-accounts</value>
      </property>
      <property name="locale">
        <value type="string">en-US</value>
      </property>
    </properties>
    <tags>
      <tag type="regular">notification</tag>
      <tag type="section">banking</tag>
    </tags>
