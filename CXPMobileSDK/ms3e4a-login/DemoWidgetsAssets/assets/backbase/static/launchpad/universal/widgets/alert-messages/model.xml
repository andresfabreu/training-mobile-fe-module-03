<catalog>
  <widget>
    <name>widget-alert-messages</name>
    <contextItemName>[BBHOST]</contextItemName>
    <extendedItemName>widget-launchpad-base</extendedItemName>
    <properties>
      <property label="Icon" name="icon" viewHint="text-input,admin,designModeOnly">
        <value type="string">rocket</value>
      </property>
      <property name="title" label="Title">
        <value type="string">Alert Messages</value>
      </property>
      <property name="thumbnailUrl">
        <value type="string">$(contextRoot)/static/launchpad/universal/widgets/alert-messages/icon.png</value>
      </property>
      <property name="src">
        <value type="string">$(contextRoot)/static/launchpad/universal/widgets/alert-messages/index.html</value>
      </property>
      <property name="automationsEndpoint" label="Automations List Endpoint" viewHint="text-input,admin,designModeOnly">
        <value type="string">services/rest/v1/alert-recipes</value>
      </property>
      <property name="automationEndpoint" label="Single Automation Endpoint" viewHint="text-input,admin,designModeOnly">
