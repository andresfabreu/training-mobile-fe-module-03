<catalog>
    <widget>
        <name>widget-places</name>
        <contextItemName>[BBHOST]</contextItemName>
        <extendedItemName>widget-launchpad-base</extendedItemName>
        <properties>
            <property name="title" label="Title" viewHint="admin,designModeOnly">
                <value type="string">Places</value>
            </property>
            <property name="thumbnailUrl">
                <value type="string">$(contextRoot)/static/launchpad/universal/widgets/places/icon.png</value>
            </property>
            <property name="src">
                <value type="string">$(contextRoot)/static/launchpad/universal/widgets/places/index.html</value>
            </property>
            <property label="Icon" name="icon" viewHint="text-input,admin,designModeOnly">
                <value type="string">places</value>
            </property>
            <property name="placesDataSrc" label="Places Data Source" viewHint="text-input,admin,designModeOnly">
                <value type="string">$(servicesPath)/services/rest/v1/places</value>
            </property>
            <property name="filterDataSrc" label="Filter drop-down Data Source" viewHint="text-input,admin,designModeOnly">
                <value type="string">$(servicesPath)/services/rest/v1/places/options</value>
            </property>
            <property name="staticMapApiUrl" label="Api Url for static map" viewHint="text-input,admin,designModeOnly">
                <value type="string">http://maps.googleapis.com/maps/api/staticmap</value>
            </property>
            <property name="directionApiUrl" label="Api Url for directions" viewHint="text-input,admin,designModeOnly">
                <value type="string">https://maps.google.com/maps</value>
            </property>
            <property name="placesFilterRadius" label="Radius" viewHint="text-input,admin,designModeOnly">
                <value type="double">50</value>
            </property>
            <property name="latitude" label="Latitude" viewHint="text-input,admin,designModeOnly">
                <value type="double">40.722823</value>
            </property>
            <property name="longitude" label="Longitude" viewHint="text-input,admin,designModeOnly">
                <value type="double">-74.003692</value>
            </property>
            <property name="zoom" label="Zoom" viewHint="text-input,admin,designModeOnly">
                <value type="double">12</value>
            </property>
            <property name="maxZoomOut" label="Max Zoom" viewHint="text-input,admin,designModeOnly">
                <value type="double">10</value>
            </property>
            <property name="staticMapZoom" label="Default zoom value for static map" viewHint="text-input,admin,designModeOnly">
                <value type="double">16</value>
            </property>
            <property name="staticMapThumbSize" label="Size of map thumbnail" viewHint="text-input,admin,designModeOnly">
                <value type="string">300x100</value>
            </property>
            <property label="Show POI on map" name="showPOI" viewHint="checkbox,admin,designModeOnly">
                <value type="boolean">false</value>
            </property>
            <property label="Initialize on user's position" name="currentPosition" viewHint="checkbox,admin,designModeOnly">
                <value type="boolean">false</value>
            </property>
            <property label="Show pan control on map" name="panControl" viewHint="checkbox,admin,designModeOnly">
                <value type="boolean">true</value>
            </property>
            <property name="placesPageSize" label="Amount of Places returned for each page" viewHint="text-input,admin,designModeOnly">
                <value type="double">20</value>
            </property>
        </properties>
        <tags>
            <tag type="regular">location</tag>
            <tag type="section">banking</tag>
            <tag type="behavior">places</tag>
        </tags>
    </widget>
</catalog>
