<catalog>
  <widget>
    <name>widget-profile-summary</name>
    <contextItemName>[BBHOST]</contextItemName>
    <extendedItemName>widget-launchpad-base</extendedItemName>
    <properties>
      <property name="src">
        <value type="string">$(contextRoot)/static/launchpad/universal/widgets/profile-summary/index.html</value>
      </property>
      <property label="Title" name="title" viewHint="admin,designModeOnly">
        <value type="string">Profile - Summary</value>
      </property>
      <property name="thumbnailUrl">
        <value type="string">$(contextRoot)/static/launchpad/universal/widgets/profile-summary/icon.png</value>
      </property>
      <property name="profileLink" label="Profile Url" viewHint="admin,designModeOnly">
        <value type="string"/>
      </property>
      <property name="preferenceService" label="Preferences Service" viewHint="admin,designModeOnly">
        <value type="string">$(servicesPath)/services/rest/v1/party-data-management/preferences</value>
      </property>
    </properties>
    <tags>
      <tag type="regular">profile</tag>
      <tag type="section">banking</tag>
    </tags>
    <securityProfile>ADMIN</securityProfile>
  </widget>
</catalog>