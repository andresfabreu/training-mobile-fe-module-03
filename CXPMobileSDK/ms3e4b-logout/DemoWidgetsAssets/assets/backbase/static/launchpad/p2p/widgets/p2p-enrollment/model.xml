<catalog>
  <widget>
    <name>widget-p2p-enrollment</name>
    <contextItemName>[BBHOST]</contextItemName>
    <extendedItemName>widget-launchpad-base</extendedItemName>
    <properties>
      <property label="Icon" name="icon" viewHint="text-input,admin,designModeOnly">
        <value type="string">p2p</value>
      </property>
      <property label="Title" name="title" viewHint="text-input,admin,designModeOnly">
        <value type="string">Send to Friend - Sign Up</value>
      </property>
      <property name="thumbnailUrl">
        <value type="string">$(contextRoot)/static/launchpad/p2p/widgets/p2p-enrollment/icon.png</value>
      </property>
      <property name="src">
        <value type="string">$(contextRoot)/static/launchpad/p2p/widgets/p2p-enrollment/index.html</value>
      </property>
      <property label="Accounts Data Source" name="accountsDataSrc" viewHint="text-input,admin,designModeOnly">
        <value type="string">$(servicesPath)/services/rest/v1/debit-accounts</value>
      </property>
      <property label="Enrollment Status Endpoint for P2P Service" name="p2pEnrollmentEndpoint" viewHint="text-input,admin,designModeOnly">
        <value type="string">$(servicesPath)/services/rest/v1/p2p-enrollment</value>
      </property>
      <property label="Email Limit" name="emailLimit" viewHint="text-input,admin,designModeOnly">
        <value type="string">7</value>
      </property>
      <property label="Places Data Source" name="saveUrl" viewHint="text-input,admin,designModeOnly">
        <value type="string">$(servicesPath)/services/rest/v1/party-data-management/locations</value>
      </property>
    </properties>
    <tags>
      <tag type="regular">p2p</tag>
      <tag type="section">banking</tag>
      <tag type="behavior">p2p-enrollment</tag>
    </tags>
    <securityProfile>ADMIN</securityProfile>
  </widget>
</catalog>