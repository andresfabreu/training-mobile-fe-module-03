<catalog>
  <widget>
    <name>widget-navbar-advanced</name>
    <contextItemName>launchpad</contextItemName>
    <extendedItemName>widget-launchpad-base</extendedItemName>
    <properties>
      <property name="title" label="Title">
        <value type="string">Navigation - Advanced</value>
      </property>
      <property name="thumbnailUrl">
        <value type="string">$(contextRoot)/static/launchpad/universal/widgets/navbar-advanced/icon.png</value>
      </property>
      <property name="src">
        <value type="string">$(contextRoot)/static/launchpad/universal/widgets/navbar-advanced/index.html</value>
      </property>
      <property name="navRoot" label="The portal root to display the nav links from" viewHint="text-input,admin,designModeOnly">
        <value type="string">navroot_mainmenu</value>
      </property>
      <property name="navShow" label="Show or hide the NavBar" viewHint="checkbox,designModeOnly,admin">
        <value type="boolean">true</value>
      </property>
      <property name="navSticky" label="Set the Navbar sticky" viewHint="checkbox,designModeOnly,admin">
        <value type="boolean">true</value>
      </property>
      <property name="showPageTitle" label="Show Page Title" viewHint="checkbox,designModeOnly,admin">
        <value type="boolean">true</value>
      </property>
      <property name="scrollSetting" label="Page Scroll settings" viewHint="select-one,admin,designModeOnly">
        <value type="string">Normal</value>
      </property>
      <property name="launcherIcon" label="Icon for Launcher Menu" viewHint="select-one,admin,designModeOnly">
        <value type="string">arrow-left</value>
      </property>
      <property name="logoURL" label="Logo Url" viewHint="text-input,admin,designModeOnly">
        <value type="string">$(contextRoot)/static/launchpad/universal/widgets/navbar-advanced/media/backbase-web-logo.png</value>
      </property>
      <property name="mobileLogoURL" label="Mobile Logo Url" viewHint="text-input,admin,designModeOnly">
        <value type="string">$(contextRoot)/static/launchpad/universal/widgets/navbar-advanced/media/backbase-mobile-logo.png</value>
      </property>
      <property name="navigationIconAnimationHook" label="Navigation menu icon animation hook" viewHint="text-input,admin,designModeOnly">
        <value type="string">arrow</value>
      </property>
      <property name="containerType" label="Container type" viewHint="select-one,user,designModeOnly">
        <value type="string">fixed</value>
      </property>
      <property name="showNotificationsBadge" label="Show Notifications badges inside the Launcher Toggle" viewHint="checkbox,admin,designModeOnly">
        <value type="boolean">false</value>
      </property>
    </properties>
    <tags>
      <tag type="regular">universal</tag>
      <tag type="section">navigation</tag>
    </tags>
    <securityProfile>ADMIN</securityProfile>
  </widget>
</catalog>