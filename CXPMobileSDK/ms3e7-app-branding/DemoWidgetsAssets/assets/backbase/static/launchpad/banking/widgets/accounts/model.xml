<catalog>
  <widget>
    <name>widget-accounts</name>
    <contextItemName>[BBHOST]</contextItemName>
    <extendedItemName>widget-launchpad-base</extendedItemName>
    <properties>
      <property label="Icon" name="icon" viewHint="text-input,admin,designModeOnly">
        <value type="string">accounts</value>
      </property>
      <property label="Title" name="title" viewHint="text-input,admin,designModeOnly">
        <value type="string">Accounts</value>
      </property>
      <property name="thumbnailUrl">
        <value type="string">$(contextRoot)/static/launchpad/banking/widgets/accounts/icon.png</value>
      </property>
      <property name="src">
        <value type="string">$(contextRoot)/static/launchpad/banking/widgets/accounts/index.html</value>
      </property>
      <property label="Show Groups" name="showGroups" viewHint="checkbox,admin,designModeOnly">
        <value type="boolean">true</value>
      </property>
      <property label="Show Groups Total" name="showGroupTotals" viewHint="checkbox,admin,designModeOnly">
        <value type="boolean">false</value>
      </property>
      <property label="Accounts Data Source" name="accountsDataSrc" viewHint="text-input,admin,designModeOnly">
        <value type="string">$(servicesPath)/services/rest/v1/customer-assets</value>
      </property>
      <property label="Groups Data Source" name="groupsDataSrc" viewHint="text-input,admin,designModeOnly">
        <value type="string">$(contextRoot)/static/launchpad/banking/widgets/accounts/data/groups.json</value>
      </property>
      <property label="Account holder name" name="showAccountHolderName" viewHint="checkbox,admin,designModeOnly">
        <value type="boolean">false</value>
      </property>
      <property label="Account type" name="showAccountType" viewHint="checkbox,admin,designModeOnly">
        <value type="boolean">false</value>
      </property>
      <property label="Account holder category" name="showAccountHolderCategory" viewHint="checkbox,admin,designModeOnly">
        <value type="boolean">false</value>
      </property>
    </properties>
    <tags>
      <tag type="regular">accounts</tag>
      <tag type="section">banking</tag>
      <tag type="behavior">accounts</tag>
    </tags>
    <securityProfile>ADMIN</securityProfile>
  </widget>
</catalog>