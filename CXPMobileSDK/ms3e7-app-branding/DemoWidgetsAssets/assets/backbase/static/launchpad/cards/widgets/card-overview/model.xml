<catalog>
  <widget>
    <name>widget-card-overview</name>
    <contextItemName>[BBHOST]</contextItemName>
    <extendedItemName>widget-launchpad-base</extendedItemName>
    <properties>
      <property label="Icon" name="icon" viewHint="text-input,admin,designModeOnly">
        <value type="string">account</value>
      </property>
      <property label="Title" name="title" viewHint="text-input,admin,designModeOnly">
        <value type="string">Card Overview</value>
      </property>
      <property name="thumbnailUrl">
        <value type="string">$(contextRoot)/static/launchpad/cards/widgets/card-overview/icon.png</value>
      </property>
      <property name="src">
        <value type="string">$(contextRoot)/static/launchpad/cards/widgets/card-overview/index.html</value>
      </property>
      <property label="Accounts Data Source" name="accountsDataSrc" viewHint="text-input,admin,designModeOnly">
        <value type="string">$(servicesPath)/services/rest/v1/debit-accounts</value>
      </property>
      <property label="Data source for Cards data" name="cardDataSrc" viewHint="text-input,admin,designModeOnly">
        <value type="string">$(servicesPath)/services/rest/v1/cards/:id/:noun</value>
      </property>
    </properties>
    <tags>
      <tag type="regular">cards</tag>
      <tag type="section">banking</tag>
      <tag type="behavior">card-management</tag>
    </tags>
    <securityProfile>ADMIN</securityProfile>
  </widget>
</catalog>